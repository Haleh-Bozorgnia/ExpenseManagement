<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>
<body>
    <header class="img-container">
            <img src="/images/index.png">
    </header>
    <main>
         <div class="btn-container">
            <a href="/expense/new"><button class="btn-log">New Expense</button></a>
            <a href="/user/logout"><button class="btn-log">Logout</button></a>
            <a href="/expense/search"><button class="btn-log">Search</button></a>
        </div>

        <div >
        <% for (expense of expenses){%>
            <article class="index-body-container">
                <div>
                    <a href="/expense/<%=expense._id%>">
                        <h3><span>Expense Title:</span>  <%= expense.title%></h3>
                    </a>
                    <h4><span>Date:</span> <%= expense.date%> </h4>
                    <h4><span>Total Price:</span> $ <%= expense.amount%></h4>
                    <h4><span>Category:</span><%= expense.category%></h4>
                </div>
                <img class="img-receipt" src="<%= expense.receipt %>" alt="Receipt Image">
            </article>
             <hr>
        <%}%>
        </div>
    </main>
</body>
</html>